<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <EditText
        android:id="@+id/RegisterActivity_Nombre"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="36dp"
        android:backgroundTint="#3F51B5"
        android:ems="10"
        android:hint="Nombres"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.502"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/RegisterActivity_ApellidoPaterno"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:backgroundTint="#3F51B5"
        android:hint="Apellido Paterno"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RegisterActivity_Nombre" />


    <EditText
        android:id="@+id/RegisterActivity_Email"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Correo Electrónico"
        android:backgroundTint="#3F51B5"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RegisterActivity_ApellidoPaterno" />

    <EditText
        android:id="@+id/RegisterActivity_Contraseña1"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:backgroundTint="#3F51B5"
        android:hint="Contraseña"
        android:inputType="textPassword"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RegisterActivity_Email" />

    <EditText
        android:id="@+id/RegisterActivity_Contrasena2"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:ems="10"
        android:hint="Confirme Contraseña"
        android:inputType="textPassword"
        android:backgroundTint="#3F51B5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RegisterActivity_Contraseña1" />



    <LinearLayout
        android:id="@+id/RegisterActivity_RUT"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RegisterActivity_Contrasena2">

        <EditText
            android:id="@+id/RegisterActivity_Rut1"
            android:layout_width="153dp"
            android:backgroundTint="#3F51B5"
            android:layout_height="wrap_content"
            android:ems="10"
            android:hint="RUT"
            android:inputType="number" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-" />

        <EditText
            android:id="@+id/RegisterActivity_Rut2"
            android:layout_width="148dp"
            android:layout_height="wrap_content"
            android:ems="10"
            android:backgroundTint="#3F51B5"
            android:inputType="textPersonName" />

    </LinearLayout>

    <Button
        android:id="@+id/RegisterActivity_BotonRegistro"
        android:layout_width="122dp"
        android:layout_height="52dp"
        android:layout_marginTop="24dp"
        android:background="#323F8B"
        android:onClick="Registrar"
        android:text="Registrarme"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RegisterActivity_RUT" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/RegisterActivity_BotonRegistro" />

</androidx.constraintlayout.widget.ConstraintLayout>